{
  "version": 2,
  "name": "ledgerlink-backend",
  "builds": [
    {
      "src": "backend/src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/prisma/**",
          "backend/dist/**",
          "backend/node_modules/.prisma/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/src/server.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CORS_ORIGIN": "https://lledgerlink.vercel.app",
    "EMAIL_FROM_NAME": "LedgerLink",
    "EMAIL_FROM_EMAIL": "noreply@ledgerlink.com",
    "UPLOAD_PATH": "/tmp/uploads",
    "MAX_FILE_SIZE": "10485760"
  },
  "functions": {
    "backend/src/server.ts": {
      "maxDuration": 30
    }
  },
  "installCommand": "cd backend && npm install",
  "buildCommand": "cd backend && npm run build"
}