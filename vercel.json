{
  "buildCommand": "cd frontend && npm ci --legacy-peer-deps && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm ci --legacy-peer-deps",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_URL": "https://ledgerlink.onrender.com",
    "VITE_API_BASE_URL": "https://ledgerlink.onrender.com/api",
    "VITE_APP_NAME": "LedgerLink",
    "VITE_APP_VERSION": "1.0.0",
    "VITE_ENABLE_ANALYTICS": "false",
    "VITE_ENABLE_DEBUG": "false",
    "VITE_SUPPORT_EMAIL": "support@ledgerlink.com"
  }
}