{
  "name": "ledgerlink-backend",
  "version": "1.0.0",
  "description": "AI-powered invoice reconciliation platform backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "db:seed": "npx prisma db seed",
    "setup": "chmod +x scripts/*.sh && ./scripts/setup.sh",
    "setup:db": "chmod +x scripts/*.sh && ./scripts/setup-db.sh",
    "setup:dev": "chmod +x scripts/*.sh && ./scripts/dev-setup.sh",
    "setup:docker": "chmod +x scripts/*.sh && ./scripts/docker-setup.sh",
    "setup:test": "chmod +x scripts/*.sh && ./scripts/test-setup.sh",
    "docker:build": "docker build -t ledgerlink-backend .",
    "docker:run": "docker run -p 3001:3001 ledgerlink-backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend",
    "clean": "rm -rf dist node_modules coverage",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install || true"
  },
  "keywords": [
    "invoice",
    "reconciliation",
    "accounting",
    "erp",
    "ai",
    "fintech"
  ],
  "author": "LedgerLink Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "rate-limiter-flexible": "^2.4.2",
    "compression": "^1.7.4",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "axios": "^1.5.0",
    "node-cron": "^3.0.2",
    "prisma": "^5.1.1",
    "@prisma/client": "^5.1.1",
    "redis": "^4.6.7",
    "nodemailer": "^6.9.4",
    "stripe": "^13.5.0",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.13.0",
    "csv-writer": "^1.6.0",
    "fast-csv": "^4.3.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.0",
    "@types/cors": "^2.8.13",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/compression": "^1.7.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.8",
    "@types/node-cron": "^3.0.8",
    "@types/nodemailer": "^6.4.9",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@types/pdfkit": "^0.12.9",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "husky": "^8.0.3",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}