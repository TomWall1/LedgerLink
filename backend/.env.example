# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ledgerlink?schema=public"
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@ledgerlink.com
FROM_NAME="LedgerLink"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ERP Integrations
# Xero
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
XERO_REDIRECT_URI=http://localhost:3001/api/v1/integrations/xero/callback

# QuickBooks
QB_CLIENT_ID=your-quickbooks-client-id
QB_CLIENT_SECRET=your-quickbooks-client-secret
QB_REDIRECT_URI=http://localhost:3001/api/v1/integrations/quickbooks/callback
QB_SANDBOX=true

# Sage
SAGE_CLIENT_ID=your-sage-client-id
SAGE_CLIENT_SECRET=your-sage-client-secret
SAGE_REDIRECT_URI=http://localhost:3001/api/v1/integrations/sage/callback

# NetSuite
NETSUITE_ACCOUNT_ID=your-netsuite-account
NETSUITE_CLIENT_ID=your-netsuite-client-id
NETSUITE_CLIENT_SECRET=your-netsuite-client-secret

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable

# Feature Flags
ENABLE_AI_MATCHING=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_AUDIT_LOGGING=true
ENABLE_ANALYTICS=true

# Security
SESSION_SECRET=your-session-secret
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true

# External APIs
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
GEOLOCATION_API_KEY=your-geolocation-api-key

# Backup
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10