# Application Configuration
NODE_ENV=development
PORT=3002
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3002

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ledgerlink
MONGODB_SSL=false
MONGODB_MAX_POOL_SIZE=10

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_super_secure_jwt_secret_here_change_in_production
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here_change_in_production
SESSION_SECRET=your_session_secret_here_change_in_production

# Xero OAuth 2.0 Configuration
XERO_CLIENT_ID=your_xero_client_id_from_developer_portal
XERO_CLIENT_SECRET=your_xero_client_secret_from_developer_portal
XERO_REDIRECT_URI=http://localhost:3002/api/xero/callback

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Features
ENABLE_XERO_SYNC_JOBS=false
ENABLE_API_LOGGING=true

# CORS
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/

# Logging
LOG_LEVEL=debug

# SSL/TLS (production only)
FORCE_HTTPS=false

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here