# LedgerLink Environment Variables

# Server Configuration
PORT=3002
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3002

# Database
MONGODB_URI=mongodb://localhost:27017/ledgerlink

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Encryption Key for sensitive data (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your_32_byte_encryption_key_in_hex_format_here

# Xero OAuth 2.0 Configuration
# Get these from https://developer.xero.com/app/manage
XERO_CLIENT_ID=your_xero_client_id_here
XERO_CLIENT_SECRET=your_xero_client_secret_here
XERO_REDIRECT_URI=http://localhost:3002/api/xero/callback

# Optional: Override default Xero endpoints (usually not needed)
# XERO_AUTHORIZE_URL=https://login.xero.com/identity/connect/authorize
# XERO_TOKEN_URL=https://identity.xero.com/connect/token
# XERO_API_BASE_URL=https://api.xero.com/api.xro/2.0

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Redis (for caching and sessions - optional)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security
CORS_ORIGIN=http://localhost:3000

# Feature Flags
ENABLE_XERO_SYNC_JOBS=true
ENABLE_API_LOGGING=true

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Production specific (set in production environment)
# DATABASE_SSL=true
# FORCE_HTTPS=true